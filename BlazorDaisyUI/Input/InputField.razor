@namespace BlazorDaisyUI

<input @attributes=UnmatchedAttributes class="@_class" />

@code {

    private string _class => new CssBuilder()
            .AddClass(DefaultClass)
            .AddClass(Class)
            .AddClass(Color.GetDescription(), Color != InputColor.None)
            .AddClass("input-ghost", Ghost)
            .AddClass(Size.GetDescription(), Size != InputSize.None)
            .Build();

    [Parameter] public string? DefaultClass { get; set; } = "input";
    [Parameter] public string? Class { get; set; }
    [Parameter] public InputColor Color { get; set; }
    [Parameter] public bool Ghost { get; set; }
    [Parameter] public InputSize Size { get; set; }

    [Parameter(CaptureUnmatchedValues = true)] public IDictionary<string, object?>? UnmatchedAttributes { get; set; }

}
